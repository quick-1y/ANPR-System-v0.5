{
  "grid": "2x2",
  "models": {
    "yolo_path": "models/yolo/best.pt",
    "ocr_path": "models/ocr_crnn/crnn_ocr_model_int8_fx.pth",
    "device": "cpu"
  },
  "ocr_constants": {
    "img_height": 32,
    "img_width": 128,
    "alphabet": "0123456789ABCEHKMOPTXY"
  },
  "thresholds": {
    "detection_confidence": 0.5,
    "ocr_confidence": 0.6
  },
  "channels": [
    {
      "id": 1,
      "name": "Канал 1",
      "source": "0",
      "best_shots": 10,
      "cooldown_seconds": 10,
      "ocr_min_confidence": 0.9,
      "region": {
        "x": 0,
        "y": 0,
        "width": 100,
        "height": 100
      },
      "detection_mode": "motion",
      "detector_frame_stride": 5,
      "motion_threshold": 0.01,
      "motion_frame_stride": 2,
      "motion_activation_frames": 3,
      "motion_release_frames": 6
    }
  ],
  "reconnect": {
    "signal_loss": {
      "enabled": true,
      "frame_timeout_seconds": 5,
      "retry_interval_seconds": 5
    },
    "periodic": {
      "enabled": false,
      "interval_minutes": 60
    }
  },
  "storage": {
    "db_dir": "data/db",
    "database_file": "anpr.db",
    "screenshots_dir": "data/screenshots"
  },
  "tracking": {
    "best_shots": 10,
    "cooldown_seconds": 10,
    "ocr_min_confidence": 0.9
  },
  "plates": {
    "config_dir": "config/countries",
    "enabled_countries": ["RU", "UA", "BY", "KZ"]
  },
  "logging": {
    "level": "INFO",
    "file": "data/app.log",
    "max_bytes": 1048576,
    "backup_count": 5
  },
  "time": {
    "timezone": "UTC+00:00",
    "offset_minutes": 0
  }
}
