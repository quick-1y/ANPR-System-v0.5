{
  "models": {
    "yolo_model_path": "models/yolo/best.pt",
    "ocr_model_path": "models/ocr_crnn/crnn_ocr_model_int8_fx.pth",
    "device": "cpu"
  },
  "ocr": {
    "img_height": 32,
    "img_width": 128,
    "alphabet": "0123456789ABCEHKMOPTXY",
    "confidence_threshold": 0.6
  },
  "detector": {
    "confidence_threshold": 0.5
  },
  "grid": "2x2",
  "channels": [],
  "reconnect": {
    "signal_loss": {
      "enabled": true,
      "frame_timeout_seconds": 5,
      "retry_interval_seconds": 5
    },
    "periodic": {
      "enabled": false,
      "interval_minutes": 60
    }
  },
  "storage": {
    "db_dir": "data/db",
    "database_file": "anpr.db",
    "screenshots_dir": "data/screenshots"
  },
  "tracking": {
    "best_shots": 10,
    "cooldown_seconds": 10,
    "ocr_min_confidence": 0.9
  },
  "plates": {
    "config_dir": "config/countries",
    "enabled_countries": ["RU", "UA", "BY", "KZ"]
  },
  "logging": {
    "level": "INFO",
    "file": "data/app.log",
    "max_bytes": 1048576,
    "backup_count": 5
  }
}
